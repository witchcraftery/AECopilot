<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest
	Version="5.0"
	ExtensionBundleId="com.ae.copilot"
	ExtensionBundleVersion="1.0.0"
	ExtensionBundleName="AECopilot"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<ExtensionList>
		<Extension Id="com.ae.copilot.panel" Version="1.0" />
	</ExtensionList>

	<ExecutionEnvironment>
		<HostList>
			<Host Name="AEFT" Version="[15.0,99.9]" />
			
		</HostList>

	<LocaleList>
		<Locale Code="All" />
	</LocaleList>

	<RequiredRuntimeList>
		<RequiredRuntime Name="CSXS" Version="5.0" />
	</RequiredRuntimeList>

	    <RequiredRuntimeCapabilities>
        <RequiredRuntimeCapability Name="ScriptingHost" />
    </RequiredRuntimeCapabilities>
</ExecutionEnvironment>

	<DispatchInfoList>
		<Extension Id="com.ae.copilot.panel">
			<DispatchInfo>

			<Resources>
				<!-- uncomment this to switch back to non HMR extension loading-->
				<MainPath>./index.html</MainPath>
				<!-- <MainPath>http://localhost:5173/index.html</MainPath> -->
				<ScriptPath>./jsx/aftereffects.jsx</ScriptPath>
				<CEFCommandLine>
	   			<Parameter>--enable-nodejs</Parameter>
				<Parameter>--mixed-context</Parameter>
				<Parameter>--allow-file-access</Parameter>
				<Parameter>--allow-file-access-from-files</Parameter>
	 			</CEFCommandLine>
			</Resources>

			<Lifecycle>
				<AutoVisible>true</AutoVisible>
			</Lifecycle>

			<UI>

				<Type>Panel</Type>
				<Menu>AECopilot</Menu>

				<Geometry>
					<Size>
						<Height>580</Height>
						<Width>400</Width>
					</Size>
				
					
				</Geometry>

			</UI>
		</DispatchInfo>
	</Extension>
</DispatchInfoList>
</ExtensionManifest>
